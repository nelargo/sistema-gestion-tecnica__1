<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="FIRMA"
            android:id="@+id/boton_firma"
            android:background="@drawable/custom_button_blue_left"
            android:textColor="#ffffff"
            android:layout_weight="4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/button_verfirma"
            android:text="VER"
            android:drawableLeft="@drawable/ic_action_preview"
            android:background="@drawable/custom_button_blue_right"
            android:textColor="#ffffff"
            android:layout_weight="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:enabled="false"
            android:onClick="ver_firma"
            android:layout_marginLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="FOTO CARNET"
            android:layout_weight="4"
            android:id="@+id/button_carnet"
            android:background="@drawable/custom_button_blue_left"
            android:textColor="#ffffff"
            android:onClick="capturarImagen" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/button_vercarnet"
            android:text="VER"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_action_preview"
            android:background="@drawable/custom_button_blue_right"
            android:textColor="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:enabled="false"
            android:onClick="ver_carnet"
            android:layout_marginLeft="1dp" />
    </LinearLayout>

</LinearLayout>