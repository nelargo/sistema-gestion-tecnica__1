<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#c8e2ea"
    tools:context=".Principal" xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/fondo1"
        android:orientation="vertical" >
        
        <ImageView
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:contentDescription="@string/titulo"
            android:src="@drawable/logo" />
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="-48dp"
            android:text="@string/certificacion_tecnica" />
        
        <TextView
            android:id="@+id/cert_titulo"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="-28dp"
            android:gravity="left"
            android:text="@string/menu_principal"
            android:textColor="#258aaf" />
        
	</LinearLayout>
	
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        	android:layout_marginTop="90dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	        android:background="@drawable/fondo1"
			>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
	        	android:layout_marginRight="3dp"
                android:gravity="center"
                >

                <FrameLayout android:layout_marginRight="3dp">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tabla"
                        android:contentDescription="@string/instalacion"
                        android:focusableInTouchMode="true"
                        android:onClick="show_instalacion"
                        android:src="@drawable/instalar_click" />
                    
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/instalacion"
                        android:layout_marginTop="-115dp"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </FrameLayout>

                <FrameLayout>

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tabla"
                        android:contentDescription="@string/reparacion"
                        android:onClick="show_reparacion"
                        android:src="@drawable/reparar_click" />
                    
                    <TextView
                        android:id="@+id/d_izq1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/reparacion"
                        android:layout_marginTop="-115dp"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
	        	android:layout_marginRight="3dp"
                android:gravity="center" >

                <FrameLayout android:layout_marginRight="3dp">
   
                    <ImageButton
                        android:id="@+id/imageButtonSalir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tabla"
                        android:contentDescription="@string/plantas_externas"
                        android:onClick="show_plantas_externas"
                        android:src="@drawable/planta_externa_click" />
                    
                     <TextView
                        android:id="@+id/textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/plantas_externas"
                        android:layout_marginTop="-115dp"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    
                    
                </FrameLayout>

                <FrameLayout>

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tabla"
                        android:contentDescription="@string/notificar_averia"
                        android:onClick="show_notificar_averias"
                        android:src="@drawable/notificar_click" />
                    
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/notificar_averia"
                        android:layout_marginTop="-115dp"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    
                </FrameLayout>
            </TableRow>
        </TableLayout>
        
     
    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:background="@drawable/fondo1"
        	android:gravity="center"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VersiÃ³n 1.3"
                android:textStyle="italic"
                android:typeface="normal" />

		</LinearLayout>
	
    
</RelativeLayout>